import java.awt.Color;
import java.util.Random;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;

public class CreateThread extends Thread{
	
	JTextField t1;
	JTextField t2;
	JTextField t3;
	JLabel l; 
	JLabel lq; 
	JFrame f; 
	private int a;
	private int b; 
	private int c;
	QuadraticEquationQueue q; 
	private boolean suspendFlag = false; 
	
	CreateThread(JTextField t1,JTextField t2,JTextField t3,JLabel l, JFrame f,JLabel lq){
		this.t1=t1; 
		this.t2=t2;
		this.t3=t3;
		this.l=l; 
		this.f=f; 
		this.lq=lq; 
		QuadraticEquationQueue q = new QuadraticEquationQueue(); 
	}
	
	public void myResume(){
		suspendFlag=false; 
	}
	
	public synchronized void mySuspend(){
		suspendFlag=true; 
		notify(); 
	}
	
	public void run(){
		
		try{
			
			while (suspendFlag){
				
				wait(); 
			}
			while (true){
				
				String str1 = t1.getText(); 
				String str2 = t2.getText();
				String str3 = t3.getText();
				
				if (str1==""||str2==""||str3==""){
					// do nothing
					continue; 
				}
				
				else{
					a = Integer.parseInt(str1); 
					b = Integer.parseInt(str2); 
					c = Integer.parseInt(str3); 
					 
					if (a==0 || b==0 || c==0){
						// do nothing 
					}
					
					else{
						QuadraticEquation eq = new QuadraticEquation(a,b,c); 
						while (q.isFull()){
							wait(); 
						}
						synchronized(this){
							q.add(eq);
							l.setText("No of QuadraticEquations Created:"+eq.getNoofObjects());
							if (q.isFull()){
								lq.setForeground(Color.GREEN);
							}
							else{
								lq.setForeground(Color.BLACK);
							}
							f.repaint();
						}
					}
				}
				
			}
			
		}catch (InterruptedException ex){}
		
	}
	
	
	

}
